{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/components/.backup/Logo-bk-cursive.tsx", "src/components/.backup/Logo-bk-2.tsx", "src/components/forms/about/.ProfileEditForm.tsx", "src/components/forms/about/.ExperienceEditForm.tsx", "src/components/forms/about/.EducationEditForm.tsx", "src/components/forms/about/.SkillsEditForm.tsx", "src/pages/about/.AboutPage.tsx", "src/components/forms/.xUnifiedForm.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
