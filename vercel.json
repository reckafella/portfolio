{
  "version": 2,
  "builds": [
    {
      "src": "portfolio/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.13"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "portfolio/wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "portfolio/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "DEBUG": "False",
    "ALLOWED_HOSTS": ".vercel.app, 127.0.0.1, localhost, rohn.live"
  }
}
